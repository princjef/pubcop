{
  "name": "pubcop",
  "version": "1.0.0",
  "description": "Publish with confidence",
  "homepage": "https://github.com/princjef/pubcop#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/princjef/pubcop.git"
  },
  "bugs": {
    "url": "https://github.com/princjef/pubcop/issues"
  },
  "bin": {
    "pubcop": "./dist/pubcop.js"
  },
  "scripts": {
    "commit": "commit",
    "commitmsg": "commitlint -e $GIT_PARAMS",
    "lint": "tslint --project tsconfig.json --fix",
    "clean": "rimraf dist",
    "prebuild": "npm run clean && npm run lint",
    "build": "tsc",
    "watch": "tsc -w",
    "pretest": "npm run build",
    "test": "nyc ava dist/**/*.spec.js --serial",
    "pretest-nocover": "npm run build",
    "test-nocover": "ava dist/**/*.spec.js",
    "show-coverage": "opener ./coverage/index.html",
    "coverage": "nyc report --reporter=text-lcov > coverage.lcov && codecov",
    "prerelease": "npm run build",
    "release": "semantic-release"
  },
  "keywords": [
    "npm",
    "publish",
    "package",
    "module",
    "tag"
  ],
  "author": "Jeff Principe <princjef@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "chalk": "^2.4.1",
    "log-symbols": "^2.2.0",
    "markdown-it": "^8.4.1",
    "pkg-dir": "^3.0.0",
    "yargs": "^11.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^7.0.0",
    "@commitlint/config-conventional": "^7.0.1",
    "@commitlint/prompt-cli": "^7.0.0",
    "@commitlint/travis-cli": "^7.0.0",
    "@semantic-release/changelog": "^2.0.2",
    "@semantic-release/git": "^5.0.0",
    "@semantic-release/github": "^4.2.17",
    "@semantic-release/npm": "^3.3.1",
    "@types/log-symbols": "^2.0.0",
    "@types/markdown-it": "0.0.4",
    "@types/node": "^10.3.4",
    "@types/pkg-dir": "^2.0.0",
    "@types/strip-ansi": "^3.0.0",
    "@types/yargs": "^11.0.0",
    "ava": "^0.25.0",
    "codecov": "^3.0.2",
    "husky": "^0.14.3",
    "nyc": "^12.0.2",
    "opener": "^1.4.3",
    "rimraf": "^2.6.2",
    "semantic-release": "^15.5.5",
    "strip-ansi": "^4.0.0",
    "tslint": "^5.10.0",
    "tslint-config-standard": "^7.0.0",
    "typescript": "^2.9.2"
  },
  "nyc": {
    "sourceMap": true,
    "reporter": [
      "text",
      "html",
      "json"
    ],
    "include": [
      "dist/**/*.js"
    ],
    "exclude": [
      "dist/**/*.spec.*",
      "dist/**/*.d.ts",
      "dist/**/*.map*"
    ],
    "check-coverage": true,
    "lines": 100,
    "statements": 100,
    "functions": 100,
    "branches": 100,
    "watermarks": {
      "lines": [
        99,
        100
      ],
      "statements": [
        99,
        100
      ],
      "functions": [
        99,
        100
      ],
      "branches": [
        99,
        100
      ]
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "release": {
    "verifyConditions": [
      "@semantic-release/changelog",
      "@semantic-release/github",
      "@semantic-release/npm",
      "@semantic-release/git"
    ],
    "prepare": [
      {
        "path": "@semantic-release/changelog",
        "changelogFile": "CHANGELOG.md"
      },
      "@semantic-release/npm",
      "@semantic-release/git"
    ],
    "publish": [
      "@semantic-release/npm",
      "@semantic-release/github"
    ],
    "success": [
      "@semantic-release/github"
    ],
    "fail": [
      "@semantic-release/github"
    ]
  }
}
