{
  "name": "pubcop",
  "version": "1.0.1",
  "description": "Publish with confidence",
  "homepage": "https://github.com/princjef/pubcop#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/princjef/pubcop.git"
  },
  "bugs": {
    "url": "https://github.com/princjef/pubcop/issues"
  },
  "bin": {
    "pubcop": "./dist/pubcop.js"
  },
  "scripts": {
    "lint": "tslint --project tsconfig.json --fix",
    "clean": "rimraf dist",
    "prebuild": "npm run clean && npm run lint",
    "build": "tsc",
    "watch": "tsc -w",
    "pretest": "npm run build && node fix-permissions.js ./dist/pubcop.js ./test/bin/master/git ./test/bin/dev/git ./test/bin/fail/git",
    "test": "nyc ava dist/**/*.spec.js --serial",
    "pretest-ci": "npm run pretest",
    "test-ci": "nyc ava dist/**/*.spec.js --serial --tap | tap-xunit > junit.xml",
    "pretest-nocover": "npm run build",
    "test-nocover": "ava dist/**/*.spec.js",
    "coverage": "opener ./coverage/index.html",
    "prerelease": "npm run build",
    "release": "semantic-release"
  },
  "keywords": [
    "npm",
    "publish",
    "package",
    "module",
    "tag"
  ],
  "author": "Jeff Principe <princjef@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "chalk": "^2.4.2",
    "log-symbols": "^2.2.0",
    "markdown-it": "^8.4.2",
    "pkg-dir": "^3.0.0",
    "yargs": "^13.2.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.2.0",
    "@commitlint/config-conventional": "^8.2.0",
    "@semantic-release/changelog": "^3.0.2",
    "@semantic-release/git": "^7.0.8",
    "@semantic-release/github": "^5.2.10",
    "@semantic-release/npm": "^5.3.4",
    "@types/log-symbols": "^2.0.0",
    "@types/markdown-it": "0.0.7",
    "@types/node": "^10.12.30",
    "@types/pkg-dir": "^2.0.0",
    "@types/strip-ansi": "^3.0.0",
    "@types/yargs": "^12.0.9",
    "ava": "^1.3.1",
    "commitlint-azure-pipelines-cli": "^1.0.1",
    "husky": "^1.3.1",
    "nyc": "^13.3.0",
    "opener": "^1.5.1",
    "rimraf": "^2.6.3",
    "semantic-release": "^15.13.31",
    "strip-ansi": "^5.1.0",
    "tap-xunit": "^2.3.0",
    "tslint": "^5.13.1",
    "tslint-config-standard": "^8.0.1",
    "typescript": "^3.3.3333"
  },
  "nyc": {
    "sourceMap": true,
    "reporter": [
      "text",
      "html",
      "json",
      "cobertura"
    ],
    "include": [
      "dist/**/*.js"
    ],
    "exclude": [
      "dist/**/*.spec.*",
      "dist/**/*.d.ts",
      "dist/**/*.map*"
    ],
    "check-coverage": true,
    "lines": 100,
    "statements": 100,
    "functions": 100,
    "branches": 100,
    "watermarks": {
      "lines": [
        99,
        100
      ],
      "statements": [
        99,
        100
      ],
      "functions": [
        99,
        100
      ],
      "branches": [
        99,
        100
      ]
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -e $HUSKY_GIT_PARAMS"
    }
  },
  "release": {
    "verifyConditions": [
      "@semantic-release/changelog",
      "@semantic-release/github",
      "@semantic-release/npm",
      "@semantic-release/git"
    ],
    "prepare": [
      {
        "path": "@semantic-release/changelog",
        "changelogFile": "CHANGELOG.md"
      },
      "@semantic-release/npm",
      "@semantic-release/git"
    ],
    "publish": [
      "@semantic-release/npm",
      "@semantic-release/github"
    ],
    "success": [
      "@semantic-release/github"
    ],
    "fail": [
      "@semantic-release/github"
    ]
  }
}
